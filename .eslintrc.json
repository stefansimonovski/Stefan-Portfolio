{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:vue/essential", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["vue"],
  "rules": {
    "no-console": [
      "warn",
      {
        "allow": ["warn", "error"]
      }
    ],
    "semi": ["error", "never"],
    "no-multi-spaces": ["error"],
    "no-empty": ["error"],
    "quotes": ["error", "single"],
    "comma-spacing": [
      "error",
      {
        "before": false,
        "after": true
      }
    ],
    "object-curly-spacing": ["error", "always"],
    "eqeqeq": ["error", "always"],
    "comma-dangle": ["error", "never"]
  }
}
